<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/len_8"

        android:paddingLeft="@dimen/len_16">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cell_fans_icon"
            android:layout_width="@dimen/len_40"
            android:layout_height="@dimen/len_40"
            android:layout_marginBottom="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon"
            app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/cell_fans_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp"
            android:text="楠楠"
            android:textColor="@android:color/black"
            android:textSize="@dimen/font_14"
            app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintStart_toEndOf="@+id/cell_fans_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cell_fans_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_btn_follow"
            android:paddingLeft="@dimen/len_12"
            android:paddingTop="@dimen/len_4"
            android:paddingRight="@dimen/len_12"
            android:paddingBottom="@dimen/len_4"
            android:text="回粉"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/font_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/tool_bar_shadow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cell_fans_btn" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>